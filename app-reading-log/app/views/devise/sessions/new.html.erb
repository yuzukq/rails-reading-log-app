<div class="bg_pattern Lines_v3"></div>
<div class="reading-list-container">
  <h1 class="page-title">ログイン</h1>

  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :user_name, "ユーザー名" %>
        <%= f.text_field :user_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "submit-button" %>
        <%= link_to "新規登録", new_user_registration_path, class: "back-link" %>
      </div>
    <% end %>
  </div>
</div> 